                            <DataTrigger Binding="{Binding UCShow}" Value="DanhSachSinhVienDK">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <local1:UCDanhSachSinhVien  />
            </Grid>
        </Grid>
    </Grid>


    

