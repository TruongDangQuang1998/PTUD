            <ColumnDefinition/>
            -->
            <!--<ColumnDefinition/>-->
            <!--
        </Grid.ColumnDefinitions>-->


            <TextBlock Grid.Row="0" Foreground="#F57B1E" Text="MỞ LỚP HỌC PHẦN" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="25" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Margin="0  0 0 0"/>
            <Grid Grid.Row="1" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="1" Text="Học kì:" HorizontalAlignment="Right" FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Margin="0  0 10 5"/>
                <ComboBox Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Bottom"  
                  ItemsSource="{Binding HocKiList}"    
                  SelectedItem="{Binding HocKiSelect}"
                      DisplayMemberPath="Name"/>
                <TextBlock Grid.Row="1"  Text="Năm Học:" Grid.Column="2" HorizontalAlignment="Right" FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Margin="10  0 10 5"/>
                <ComboBox Grid.Column="3" Grid.Row="1" Width="200" HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Bottom"  
                  ItemsSource="{Binding NamHocList}"    
                  SelectedItem="{Binding NamHocSelect}"
                      DisplayMemberPath="Name"/>
            </Grid>

            <TextBlock Grid.Row="2" Foreground="#44AECE" Text="DANH SÁCH MÔN HỌC ĐÃ MỞ TRONG HỌC KÌ NÀY" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Margin="0  0 0 0"/>

            <!--list mon-->

            <DataGrid Grid.Row="3"  AutoGenerateColumns="False" IsReadOnly="True"  Margin="0 10 0 10" Name="lvMonHoc" ItemsSource="{Binding MonHocList}" SelectedItem="{Binding MonHocSelect}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Width="60" Binding="{Binding Stt}" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Mã Môn Học" Width="200" Binding="{Binding MaHP}"/>
                    <DataGridTextColumn Header="Tên môn học" Width="200" Binding="{Binding TenMonHoc}" />
                    <DataGridTextColumn Header="Số TC" Width="200" Binding="{Binding SoTC}" />
                    <DataGridTextColumn Header="Môn điều kiện"  Width="200" Binding="{Binding TienQuyet}"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Mở Thêm Môn" Command="{Binding MoThemLopCommand}" Width="200" Foreground="White" Margin="10 0 10 0" />
                <!--<Button Content="Hủy Môn" Width="200" Foreground="White" Margin="10 0 10 0"/>-->

            </StackPanel >




            <TextBlock Grid.Row="4"  Foreground="#44AECE" Text="DANH SÁCH LỚP HỌC PHẦN ĐÃ MỞ" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Margin="0  10 0 0"/>

            <!--List hoc phan-->
            <DataGrid Grid.Row="5"  AutoGenerateColumns="False" IsReadOnly="True"  Margin="0 10 0 10" Name="lvHocPhan" ItemsSource="{Binding HocPhanList}" SelectedItem="{Binding HocPhanSelect}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Width="60" Binding="{Binding Stt}" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Mã LHP" Width="180" Binding="{Binding MaLHP}"/>
                    <DataGridTextColumn Header="Tên Lớp Học Phần" Width="180" Binding="{Binding TenLopHocPhan}" />
                    <DataGridTextColumn Header="Lớp" Width="119" Binding="{Binding Lop}" />
                    <DataGridTextColumn Header="Sỉ số tối đa" Width="100" Binding="{Binding SiSoToiDa}" />
                    <DataGridTextColumn Header="Đã đăng ký" Width="100" Binding="{Binding DaDangKy}" />
                    <DataGridTextColumn Header="Trang thái" Width="190" Binding="{Binding TrangThai}" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Mở Thêm Lớp" Width="200" Command="{Binding MoThemLopCommand}" Foreground="White" Margin="10 0 10 0" />
                <Button Content="Hủy Lớp" Width="200" Foreground="White" Margin="10 0 10 0"/>

            </StackPanel >

            <!--<Grid Grid.Row="6" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Nhóm:" HorizontalAlignment="Right" FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Margin="0  0 10 5"/>
            <ComboBox Grid.Column="1" Width="50"  HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Bottom" 
                      ItemsSource="{Binding NhomTHList}"    
                  SelectedItem="{Binding NhomTHSelect}" />
        </Grid>-->
            <TextBlock Grid.Row="7" Foreground="#44AECE" Text="CHI TIẾT LỚP HỌC PHẦN" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="18" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Margin="0  0 0 0"/>
            <!--thông tin môn học-->

            <DataGrid Grid.Row="8"  AutoGenerateColumns="False"  Margin="0 10 0 10"  IsReadOnly="True" 
                  ItemsSource="{Binding ChiTietList}" SelectedItem="{Binding ChiTietSelect}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Width="60" Binding="{Binding Stt}" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Lịch học" Width="150" Binding="{Binding LichHoc}"/>
                    <DataGridTextColumn Header="Nhóm TH" Width="100" Binding="{Binding NhomTH}" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Phòng" Width="100" Binding="{Binding Phong}" />
                    <DataGridTextColumn Header="Giảng viên" Width="250" Binding="{Binding GiangVien}" />
                    <DataGridTextColumn Header="Thời Gian" Width="200" Binding="{Binding ThoiGian}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Cập nhập lịch học" Width="200" Command="{Binding MoThemLopCommand}" Foreground="White" Margin="10 0 10 0" />
                <!--<Button Content="Hủy Môn" Width="200" Foreground="White" Margin="10 0 10 0"/>-->

            </StackPanel >
            <!--<Button Content="Đăng Ký" Command="{Binding DangKyHocPhan}" Margin="0 20 0 0" FontSize="20" Height="40" Grid.Row="9" Width="200"/>-->
            <!--<Button Content="Đăng ký" Grid.Row="5" Width="200"/>-->
        </StackPanel>
    </ScrollViewer>
</UserControl>
