                            <Button  FontSize="20" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Left" Content="Quản lý Giảng Viên" Command="{Binding QuanLyGiangVienCommand}"/>
                            <!--<Label Margin="20,5,5,5"  Content="Nueva Factura"/>
                            <Border  BorderBrush="Black" BorderThickness="0.5"></Border>
                            <Label Margin="20,5,5,5"  Content="Consultar Facturas Normales y Anuladas"/>-->
                        </StackPanel>
                    </Expander>
                    <Border  BorderBrush="Black" BorderThickness="1"></Border>
                    <ListViewItem x:Name="ThongTinTaiKhoan" Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Account"  Width="40" Height="40" Foreground="#FFF08033" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Thông tin Tài khoản"  Margin="10"/>
                        </StackPanel>
                    </ListViewItem>
                    <Border  BorderBrush="Black" BorderThickness="1"></Border>
                    <ListViewItem x:Name="DangXuat" Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <materialDesign:PackIcon Kind="Logout" Width="40" Height="40" Foreground="#FF0000" Margin="5" VerticalAlignment="Center"/>
                            <TextBlock Text="Đăng Xuất" Margin="10" />
                        </StackPanel>
                    </ListViewItem>

                </ListBox>
            </StackPanel>
            <Grid Grid.Column="1" Margin="10 0 100 0">
                <Grid >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UCShow}" Value="ThongTinTaiKhoan">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <local1:ThongTinSinhVienUC  />
                </Grid>
                <Grid >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
